      "source": [
        "def harmonic_sum(n):\n",
        "  if n < 2:\n",
        "    return 1\n",
        "  else:\n",
        "    return 1 / n + (harmonic_sum(n - 1))\n",
        "a=int(input(\"enter a number:\"))\n",
        "print(harmonic_sum(a))"
